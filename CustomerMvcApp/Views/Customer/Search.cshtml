@model List<CustomerMvcApp.Models.Customer>


@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    <div class="form-group col-md-6 col-md-offset-3">
        @Html.Label("Code")
        @Html.TextBox("Code", null, htmlAttributes: new { @class="form-control"})
        <input type="submit" value="Search" class="btn btn-success pull-right" style="margin-top:5px;" />
    </div>
}


@if (Model != null && Model.Count > 0)
{
    var sl = 1;
    <table class="table table-bordered table-striped">
        <tr>
            <th>Sl</th>
            <th>Name</th>
            <th>Code</th>
            <th>Address</th>
            <th>Email</th>
            <th>Contact</th>
            <th>Age</th>
            <th>Loyality Point</th>
            <th>Action</th>
        </tr>
        @foreach (var customer in Model)
        {

            <tr>
                <td>@(sl++)</td>
                <td>@customer.Name</td>
                <td>@customer.Code</td>
                <td>@customer.Address</td>
                <td>@customer.Email</td>
                <td>@customer.Contact</td>
                <td>@customer.Age</td>
                <td>@customer.LoyalityPoint</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Customer", new { id = customer.Id }, new { @target = "_blank", @class = "btn btn-default btn-sm" })
                    @Html.ActionLink("Delete", "Delete", "Customer", new { id = customer.Id }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </table>
}











